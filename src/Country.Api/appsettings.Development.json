{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        },
        "Console": {
            "Default": "Information",
            "Microsoft.AspNetCode": "Warning"
        },
        "FormatterName": "json", //could be 'simple'
        "FormatterOptions": {
            "SingleLine": true,
            "IncludeScopes": true,
            "TimestampFormat": "HH:mm:ss",
            "UseUtcTimestamp": true,
            "JsonWriterOptions": {
                "Indented": true
            }
        }
    }
}
